SELECT
  invoice.month,
  SUM(cost)
    + SUM(IFNULL((SELECT SUM(c.amount)
                  FROM UNNEST(credits) c), 0))
    AS total,
  (SUM(CAST(cost AS NUMERIC))
    + SUM(IFNULL((SELECT SUM(CAST(c.amount AS NUMERIC))
                  FROM UNNEST(credits) AS c), 0)))
    AS total_exact
FROM `project-ID.dataset.gcp_billing_export_v1_XXXXXX-XXXXXX-XXXXXX`
GROUP BY 1
ORDER BY 1 ASC;


===========


SELECT
  invoice.month,
  project.id AS project_id,

  -- Usage cost (positive)
  SUM(CAST(cost AS NUMERIC)) AS usage_cost,

  -- Credits (negative)
  IFNULL(SUM(CAST(c.amount AS NUMERIC)), 0) AS credits,

  -- Net total
  SUM(CAST(cost AS NUMERIC))
    + IFNULL(SUM(CAST(c.amount AS NUMERIC)), 0) AS total_exact

FROM `project-ID.dataset.gcp_billing_export_v1_XXXXXX-XXXXXX-XXXXXX`
LEFT JOIN UNNEST(credits) AS c
GROUP BY
  invoice.month,
  project_id
ORDER BY
  invoice.month,
  project_id;

==============

SELECT
  invoice.month,
  project.id   AS project_id,
  project.name AS project_name,

  SUM(CAST(cost AS NUMERIC)) AS usage_cost,
  IFNULL(SUM(CAST(c.amount AS NUMERIC)), 0) AS credits,
  SUM(CAST(cost AS NUMERIC))
    + IFNULL(SUM(CAST(c.amount AS NUMERIC)), 0) AS total_exact

FROM `project-ID.dataset.gcp_billing_export_v1_XXXXXX-XXXXXX-XXXXXX`
LEFT JOIN UNNEST(credits) AS c
GROUP BY
  invoice.month,
  project_id,
  project_name
ORDER BY
  invoice.month DESC,
  project_id;







https://docs.cloud.google.com/billing/docs/how-to/export-data-bigquery-setup#enable-bq-export



SELECT
  invoice.month AS month,
  project.id    AS project_id,
  project.name  AS project_name,
  SUM(CAST(cost AS NUMERIC))
    + IFNULL(SUM(CAST(c.amount AS NUMERIC)), 0) AS total_cost
FROM `project-ID.dataset.gcp_billing_export_v1_XXXXXX-XXXXXX-XXXXXX`
LEFT JOIN UNNEST(credits) AS c
GROUP BY
  month,
  project_id,
  project_name
ORDER BY
  month DESC,
  total_cost DESC






