CREATE TABLE `YOURDATASET.project_budgets` (
  project_name STRING,
  project_id STRING,
  project_number INT64,
  monthly_budget_amount NUMERIC,
  alerting_setup BOOL,
  alerting_name STRING,
  date_created TIMESTAMP,
  date_updated TIMESTAMP,
  created_by STRING,
  updated_by STRING
);

